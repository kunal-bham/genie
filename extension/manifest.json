{
  "manifest_version": 3,
  "name": "Calendar Genie",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "clipboardRead"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["html2canvas.min.js", "content.js"]
  }],
  "commands": {
    "process-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Process clipboard screenshot"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
} 