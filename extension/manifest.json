{
  "manifest_version": 3,
  "name": "Calendar Genie Extension",
  "version": "1.0",
  "description": "Quickly capture screenshots and create calendar events",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "clipboardRead",
    "notifications"
  ],
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open Calendar Genie"
    },
    "process-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Process clipboard image"
    }
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://localhost:3000/*",
    "https://*.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 